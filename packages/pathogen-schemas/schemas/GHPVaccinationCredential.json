            "description": "Associated vaccination certificate",
            "type": "array",
            "items": {
                "type": "string"
            }
       },
        "recipient": {
            "$comment": "{\"term\": \"recipient\", \"@id\": \"https://w3id.org/pathogen#GHPEventRecipient\"}",
